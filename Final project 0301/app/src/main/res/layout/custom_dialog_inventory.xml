<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/gamerType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/minecraft"
        android:gravity="center"
        android:text="Inventory"
        android:textColor="@color/black"
        android:textSize="50dp" />


    <ImageButton
        android:id="@+id/list_image"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/emptypicture"
        android:tintMode="screen"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="299dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toEndOf="@id/list_image"
        android:layout_below="@id/gamerType">

        <LinearLayout
            android:layout_width="301dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_gold"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:textColor="#AFA600"
                android:text="Gold:" />

            <TextView
                android:id="@+id/list_level"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:textColor="#FF0000"
                android:text="Level: " />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_weapon"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="2"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:text="@string/weapon" />

        </LinearLayout>

        <TextView
            android:id="@+id/list_monster"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:text="Monster:"
            android:textSize="13dp"
            android:textColor="#0022FF" />


    </LinearLayout>


</RelativeLayout>